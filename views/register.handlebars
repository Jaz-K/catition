{{!-- {{> header_out}} --}}
{{> header_out}}
<main class="twoCol oneCol">
    <h1>Cats for every household</h1>
    <section>
        <h2>Benefits of having a cat</h2>
        <img  class="cat_img" src="/assets/white_cat_illu.png" alt="cat">
        <p class="benefits">Lower your stress level.</p>
        <p class="benefits">Structure your day.</p>
        <p class="benefits">Boost your mood.</p>
        <p class="benefits">Improve your sleep quality.</p>
    </section>
    <section>
        <form action="/catition" method="post">
                <label for="fname">First name:</label>
                <input type="text" name="first_name" id="fname" required>
                <label for="lname">Last name:</label>
                <input type="text" name="last_name" id="lname" required>
                <label for="email">Email:</label>
                <input type="email" name="email" id="email" required>   
                <label for="password">Password:</label>
                <input type="password" name="password" id="password" required>
            <button type="submit">Register</button>
            {{#if error}}
                <p class="error">{{error}}</p>
            {{/if}}
        </form>
    </section>
</main>