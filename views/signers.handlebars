{{!-- {{ log 'signers' signers}} --}}

{{> header}}
<main>
    <section>
        <h1>All supporters</h1>
        <ul>
            {{#each signers}}

                <li><img src="/assets/pawprint.svg" alt="pawprint" class="pawprint"> {{#if website}}
                            <a href="{{website}}" class="linkstyle" target="_blank">{{first_name}} {{last_name}}</a>
                            {{else}}
                            {{first_name}} {{last_name}}
                            {{/if}}
                            {{#if age}}
                            | {{age}}
                            {{/if}}
                            {{#if city}}
                            | <a href="/signers/{{city}}" class="linkstyle">{{city}}</a>
                            {{/if}}
                </li>        
            {{/each}}
        </ul>
    </section>
</main>